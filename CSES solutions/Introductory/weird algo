	{
		ll n;
		cin>>n;
		cout<<n<<' ';
		if(n==1)
			return 0;
		while(1)
		{
			if(n%2==0)
			{
				n/=2;
				cout<<n<<' ';
			}
			else
			{
				n*=3;
				n++;
				cout<<n<<' ';
			}
			if(n==1)
			{
				break;
			}
		}		
	}
		
}
